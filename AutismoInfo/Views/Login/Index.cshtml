@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Bem-vindo de volta</h2>
            <p>Entre com suas credenciais</p>
        </div>
        <form asp-controller="Login" asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" placeholder="Seu e-mail" />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Senha</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Sua senha" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>
            <button type="submit" class="auth-btn">Entrar</button>

            <div class="social-login">
                <div class="social-login-divider">
                    <span>Ou continue com</span>
                </div>
                <div class="social-buttons">
                    <a href="#" class="social-btn social-btn-google" title="Login com Google">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-btn social-btn-facebook" title="Login com Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-btn social-btn-github" title="Login com GitHub">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="social-btn social-btn-instagram" title="Login com Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>

            <div class="auth-footer">
                <p>Não tem uma conta? <a asp-controller="Account" asp-action="Register">Cadastre-se</a></p>
            </div>
        </form>
    </div>
</div>