@model RegisterViewModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Criar Conta</h2>
            <p>Preencha os campos abaixo</p>
        </div>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="FullName" class="form-label">Nome Completo</label>
                <input asp-for="FullName" class="form-control" placeholder="Seu nome completo" />
                <span asp-validation-for="FullName" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" placeholder="Seu e-mail" />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Senha</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Crie uma senha" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirmar Senha</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirme sua senha" />
                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
            </div>
            <button type="submit" class="auth-btn">Cadastrar</button>

            <div class="social-login">
                <div class="social-login-divider">
                    <span>Ou cadastre-se com</span>
                </div>
                <div class="social-buttons">
                    <a href="#" class="social-btn social-btn-google" title="Cadastro com Google">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-btn social-btn-facebook" title="Cadastro com Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-btn social-btn-github" title="Cadastro com GitHub">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="social-btn social-btn-instagram" title="Cadastro com Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </div>

            <div class="auth-footer">
                <p>Já tem uma conta? <a asp-controller="Login" asp-action="Index">Entrar</a></p>
            </div>
        </form>
    </div>
</div>