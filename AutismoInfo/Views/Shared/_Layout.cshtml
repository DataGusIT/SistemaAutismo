<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIAA</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/1hb8Wl6r4dXp8r7uO3u/O5g2v6Y8b7Ckm5C9w5" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/png" href="~/Images/favicon.png" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Recursos/Detalhes/Detalhes.css" asp-append-version="true">
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="nav-content">
                <div class="logo">
                    <img src="~/Images/logo.png" alt="AutismoInfo" class="brand-logo">
                </div>

                <ul class="nav-links">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Recursos" asp-action="Index">Recursos</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Duvidas" asp-action="Index">FAQ</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Contatos" asp-action="Index">Contatos</a></li>
                </ul>
                <div>
                    <a class="btn btn-outline" asp-area="" asp-controller="Login" asp-action="Index">Entrar</a>
                    <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Cadastro</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
